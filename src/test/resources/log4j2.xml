<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Properties -->
    <Properties>
        <Property name="LOG_DIR">logs</Property>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <!-- Appenders -->
    <Appenders>
        <!-- Console with color -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss} [%t] %-5level %c{1} - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue, TRACE=cyan}"/>
        </Console>

        <!-- Rolling File (daily rotation, keep 7 days) -->
        <RollingFile name="FileLogger"
                     fileName="${LOG_DIR}/api-tests.log"
                     filePattern="${LOG_DIR}/api-tests-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>
    </Appenders>

    <!-- Loggers -->
    <Loggers>
        <!-- Rest Assured logs (only print when .log().all() is used) -->
        <Logger name="io.restassured" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Suppress noisy HTTP client internals -->
        <Logger name="org.apache.http" level="WARN" additivity="false">
            <AppenderRef ref="FileLogger"/>
        </Logger>
        <Logger name="org.apache.http.wire" level="OFF" additivity="false">
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- JSON parser (only warn/error) -->
        <Logger name="com.fasterxml.jackson" level="WARN" additivity="false">
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Root project logs -->
        <Root level="ERROR">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

    </Loggers>
</Configuration>
